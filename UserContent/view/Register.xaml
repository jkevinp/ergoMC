<Window x:Class="ProjectK.ErgoMC.Assessment.UserContent.view.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERGOMC - User Registration" Height="650" Width="650
" WindowStartupLocation="CenterScreen" Background="{DynamicResource KinectBluishBG}" WindowStyle="None" Loaded="Window_Loaded">

    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
        <SolidColorBrush x:Key="KinectBluish" Color="#FF0095D4" />
        <SolidColorBrush x:Key="KinectBluishBG" Color="#FFF1F5F8" />
        <SolidColorBrush x:Key="KinectBlack" Color="#213035" />
    </Window.Resources>

    <Grid Margin="0">
        <StackPanel>
            <Label Content="ErgoMC"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="40" FontWeight="ExtraBold" Width="642" Background="{DynamicResource KinectBlack}" Foreground="White"/>
            <Label Content="User Registration"  HorizontalAlignment="Center" FontSize="20" FontWeight="ExtraBold" Foreground="White" Width="642" Background="{DynamicResource KinectBluish}" Height="37">
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
            </Label>
            <StackPanel Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Username" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <TextBox Name="txt_username"  Text="{Binding Path=User.UserName, Mode=TwoWay}"  MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20" TextWrapping="Wrap" BorderThickness="0,0,0,3" Padding="0,10,0,5" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Password" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <PasswordBox Name="txt_password"   PasswordChar="*" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20"  BorderThickness="0,0,0,3" Padding="0,10,0,5" Width="321" Margin="0" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Confirm Password" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <PasswordBox Name="txt_password1" PasswordChar="*" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20"  BorderThickness="0,0,0,3" Padding="0,10,0,5" Width="321" Margin="0" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Firstname" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <TextBox Text="{Binding Path=User.FirstName, Mode=TwoWay}" Name="txt_firstname"  MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20" TextWrapping="Wrap" BorderThickness="0,0,0,3" Padding="0,10,0,5" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Middlename" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <TextBox Name="txt_middlename"  Text="{Binding Path=User.MiddleName, Mode=TwoWay}" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20" TextWrapping="Wrap" BorderThickness="0,0,0,3" Padding="0,10,0,5" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Lastname" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <TextBox Name="txt_lastname" Text="{Binding Path=User.LastName, Mode=TwoWay}" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20" TextWrapping="Wrap" BorderThickness="0,0,0,3" Padding="0,10,0,5" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Forgot Password Question" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <TextBox Name="txt_forgot_question" Text="{Binding Path=User.Forgot_question, Mode=TwoWay}" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20" TextWrapping="Wrap" BorderThickness="0,0,0,3" Padding="0,10,0,5" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Forgot Password Answer" FontSize="16" MinWidth="200" VerticalContentAlignment="Bottom" Margin="0,0,50,0"/>
                    <TextBox Name="txt_forgot_answer"  Text="{Binding Path=User.Forgot_answer, Mode=TwoWay}" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"   FontSize="20" TextWrapping="Wrap" BorderThickness="0,0,0,3" Padding="0,10,0,5" BorderBrush="{DynamicResource KinectPurpleBrush}" HorizontalContentAlignment="Center" Background="{x:Null}" MaxLength="16" MaxHeight="45" MinHeight="45"/>
                </StackPanel>

                <StackPanel >
                    <Button Content="Register" HorizontalAlignment="Center" Width="642"  Background="{DynamicResource KinectBluish}" BorderThickness="20,0,0,0" BorderBrush="{DynamicResource KinectBlack}" Foreground="White" FontSize="16" Padding="1,5" Margin="0,20,0,0" Click="Button_Click"/>
                    <Button Content="Reset" HorizontalAlignment="Center" Width="642" Background="{DynamicResource KinectBluish}" BorderThickness="20,0,0,0" BorderBrush="{DynamicResource KinectBlack}" Foreground="White" FontSize="16" Padding="1,5" Margin="0,7,0,0" Click="Button_Click_1"/>
                    <Button Content="Cancel" HorizontalAlignment="Center" Width="642" Background="{DynamicResource KinectBluish}" BorderThickness="20,0,0,0" BorderBrush="{DynamicResource KinectBlack}" Foreground="White" FontSize="16" Padding="1,5" Margin="0,7,0,0" Click="Button_Click_2"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
